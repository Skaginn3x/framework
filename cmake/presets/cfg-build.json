{
  "version": 4,
  "configurePresets": [
    {
      "name": "cfg-build-dir",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "cfg-debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "cfg-release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_UNIT_TEST_EXCLUSION_FROM_ALL_BUILD":"ON"
      }
    },
    {
      "name": "cfg-ccache",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
      }
    },
    {
      "name": "cfg-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "cfg-gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "cfg-code-coverage",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_CODE_COVERAGE_INSTRUMENTATION": "ON"
      }
    },
    {
      "name": "cfg-san",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SANITIZATION": "ON"
      }
    },
    {
      "name": "cfg-cppcheck",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CPPCHECK": "cppcheck"
      }
    },
    {
      "name": "cfg-clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--config-file=${fileDir}/.clang-tidy"
      }
    },
    {
      "name": "cfg-clang-tidy-fix",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--config-file=${fileDir}/.clang-tidy;--fix"
      }
    }
  ]
}
