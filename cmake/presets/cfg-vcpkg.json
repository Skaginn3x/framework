{
  "version": 4,
  "configurePresets": [
    {
      "name": "cfg-vcpkg",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_INSTALLED_DIR": "${fileDir}/build/${presetName}/vcpkg-sysroot",
        "CMAKE_TOOLCHAIN_FILE": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${fileDir}/cmake/toolchains/x64-linux-gcc.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux-gcc"
      }
    },
    {
      "name": "cfg-vcpkg-dynamic",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic",
        "VCPKG_INSTALLED_DIR": "${fileDir}/build/${presetName}/vcpkg-sysroot-dynamic",
        "BUILD_SHARED_LIBS": "ON",
        "LINK_SHARED_LIBS": "ON"
      },
      "inherits": [
        "cfg-vcpkg"
      ]
    },
    {
      "name": "cfg-vcpkg-clang",
      "hidden": true,
      "inherits": [
        "cfg-vcpkg"
      ],
      "description": "vcpkg clang compiled with libc++.",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${fileDir}/cmake/toolchains/x64-linux-clang.cmake",
        "VCPKG_INSTALLED_DIR": "${fileDir}/build/${presetName}/vcpkg-sysroot-clang",
        "VCPKG_TARGET_TRIPLET": "x64-linux-clang"
      }
    },
    {
      "name": "cfg-vcpkg-clang-dynamic",
      "hidden": true,
      "inherits": [
        "cfg-vcpkg-clang"
      ],
      "cacheVariables": {
        "VCPKG_INSTALLED_DIR": "${fileDir}/build/${presetName}/vcpkg-sysroot-clang-dynamic",
        "VCPKG_TARGET_TRIPLET": "x64-linux-clang-dynamic",
        "BUILD_SHARED_LIBS": "ON",
        "LINK_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "cfg-vcpkg-gcc-dynamic",
      "hidden": true,
      "inherits": [
        "cfg-vcpkg"
      ],
      "cacheVariables": {
        "VCPKG_INSTALLED_DIR": "${fileDir}/build/${presetName}/vcpkg-sysroot-gcc-dynamic",
        "VCPKG_TARGET_TRIPLET": "x64-linux-gcc-dynamic"
      }
    },
    {
      "name": "cfg-vcpkg-aarch64",
      "hidden": true,
      "inherits": [
        "cfg-vcpkg"
      ],
      "cacheVariables": {
        "VCPKG_INSTALLED_DIR": "${fileDir}/build/${presetName}/vcpkg-sysroot-aarch64",
        "VCPKG_TARGET_TRIPLET": "arm64-linux",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${fileDir}/cmake/toolchains/aarch64-linux-gcc.cmake"
      }
    }
  ]
}
