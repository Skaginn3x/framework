{
  "version": 4,
  "include": [
    "./cmake/presets/cfg-vcpkg.json",
    "./cmake/presets/cfg-build.json"
  ],
  "configurePresets": [
    {
      "name": "dev-gcc-debug-dynamic",
      "generator": "Ninja",
      "inherits": [
        "cfg-vcpkg-gcc-libstdcxx-dynamic",
        "cfg-build-dir",
        "cfg-debug"
      ]
    },
    {
      "name": "dev-clang-libstdcxx-debug-dynamic",
      "generator": "Ninja",
      "inherits": [
        "cfg-vcpkg-clang-libstdcxx-dynamic",
        "cfg-build-dir",
        "cfg-debug"
      ]
    },
    {
      "name": "dev-clang-debug-dynamic",
      "generator": "Ninja",
      "inherits": [
        "cfg-vcpkg-clang-libcxx-dynamic",
        "cfg-build-dir",
        "cfg-debug"
      ]
    },
    {
      "name": "ci-clang-debug",
      "generator": "Ninja",
      "inherits": [
        "cfg-vcpkg-clang-libstdcxx",
        "cfg-build-dir",
        "cfg-debug",
        "cfg-cppcheck",
        "cfg-clang-tidy"
      ]
    },
    {
      "name": "ci-clang-release",
      "generator": "Ninja",
      "inherits": [
        "cfg-vcpkg-clang-libstdcxx",
        "cfg-build-dir",
        "cfg-release"
      ]
    },
    {
      "name": "ci-gcc-debug",
      "generator": "Ninja",
      "inherits": [
        "cfg-vcpkg",
        "cfg-build-dir",
        "cfg-debug"
      ]
    },
    {
      "name": "ci-docs",
      "inherits": ["ci-gcc-debug"],
      "cacheVariables": {
        "BUILD_DOCS": "ON"
      }
    },
    {
      "name": "ci-gcc-release",
      "generator": "Ninja",
      "inherits": [
        "cfg-vcpkg",
        "cfg-build-dir",
        "cfg-release"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "build-ci-clang-debug",
      "configurePreset": "ci-clang-debug"
    },
    {
      "name": "build-ci-clang-release",
      "configurePreset": "ci-clang-release"
    },
    {
      "name": "build-ci-gcc-debug",
      "configurePreset": "ci-gcc-debug"
    },
    {
      "name": "build-ci-gcc-release",
      "configurePreset": "ci-gcc-release"
    },
    {
      "name": "build-docs",
      "configurePreset": "ci-docs",
      "targets": [
        "Doxygen",
        "Sphinx"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "test-ci-clang-debug",
      "configurePreset": "ci-clang-debug",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "test-ci-gcc-debug",
      "configurePreset": "ci-gcc-debug",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }
  ]
}