  "configurePresets": [
    {
      "name": "ci-gcc-debug-dynamic",
      "description": "Used for developing purposes",
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "ON"
      },
      "inherits": [
        "cfg-vcpkg-gcc-dynamic",
        "cfg-build-dir",
        "cfg-debug"
      ]
